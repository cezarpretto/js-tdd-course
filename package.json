{
  "name": "js-tdd-course",
  "version": "1.0.0",
  "description": "JS com TDD na pr√°tica",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint ./src/*.js",
    "prepush": "yarn run lint && yarn run test:coverage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "./node_modules/.bin/nyc yarn run test"
  },
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporter": ["text", "html"],
    "exclude": ["tests/**"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cezarpretto/js-tdd-course.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Cezar Pretto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cezarpretto/js-tdd-course/issues"
  },
  "homepage": "https://github.com/cezarpretto/js-tdd-course#readme",
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.18.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "mocha": "^5.0.1",
    "nyc": "^11.4.1"
  }
}
